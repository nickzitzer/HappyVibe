{
  "name": "happyvibe-with-mcp",
  "version": "0.2.1",
  "description": "HappyVibe with integrated ServiceNow MCP Server",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "web": "npm run build && cd src-tauri && cargo run --bin opcode-web",
    "mcp:install": "npm install -g servicenow-mcp-server",
    "mcp:start": "servicenow-mcp-server",
    "mcp:docker": "docker run -d --name happyvibe-mcp -p 3000:3000 -e SN_INSTANCE_URL=$SN_INSTANCE_URL -e SN_USERNAME=$SN_USERNAME -e SN_PASSWORD=$SN_PASSWORD nczitzer/mcp-servicenow-nodejs:latest",
    "docker:build": "docker build -t happyvibe:latest .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@monaco-editor/react": "^4.6.0",
    "@radix-ui/react-accordion": "^1.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.3",
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.3",
    "@radix-ui/react-dropdown-menu": "^2.1.3",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-menubar": "^1.1.3",
    "@radix-ui/react-popover": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-select": "^2.1.3",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.1.5",
    "@tauri-apps/api": "^2.3.0",
    "@tauri-apps/plugin-dialog": "^2.3.0",
    "@tauri-apps/plugin-fs": "^2.3.0",
    "@tauri-apps/plugin-opener": "^2.0.3",
    "@tauri-apps/plugin-os": "^2.3.0",
    "@tauri-apps/plugin-shell": "^2.3.0",
    "@uiw/react-md-editor": "^4.0.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.4",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.2.0",
    "lucide-react": "^0.469.0",
    "monaco-editor": "^0.52.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.7.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.3.0",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.11",
    "@types/react-dom": "^19.0.5",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.3.5"
  },
  "optionalDependencies": {
    "servicenow-mcp-server": "^1.0.0"
  }
}
